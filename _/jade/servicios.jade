include _mixins.jade

doctype html
html(lang="es")
	head
		+head("Velarent | Servicios")
	body
	.all
		header.mainHeader
			+header([['Nosotros', 'nosotros',''], ['Servicios', 'servicios','active'], ['Galería', 'galeria', ''], ['Contacto', 'contacto', '']])
			
		#mainbanner
			.slider
				.slide
					img(src="_/img/s2_bg.jpg", alt="", data-position="0,0", data-in="fade")
					img(src="_/img/s2_img.png", alt="", data-position="100,600", data-in="scrollRight")
					.text.white.small(data-position="200,84", data-in="scrollBottom ") HASTA
					.text.yellow.medium(data-position="220,80", data-in="scrollBottom ") LUZCO MÁS GUAPO
					.text.white.small(data-position="270,282", data-in="scrollBottom ") SIN QUE ME DÉ EL SOL
				.fs_loader
		
		section.main.doubleborder.mtover
			.pleca SÓLO LO MEJOR
			.textos
				p.title NO HAGA DE SU EVENTO UN CIRCO
				p Nuestra empresa diseñó hace más de 35 años las carpas, en Roura nos dedicamos ala confección y venta y renta de velarías, expertos en proyectos de todos los tamaños, proporcionamos un toque de elegancia y buen gusto a espacios tan pequeños como el jardín de una casa hasta áreas de exposición o grandes escenarios al aire libre. 
			.mainimg
				img(src="_/img/main_servicios.jpg", alt="")
		
		
				
		section.bgtri.cover
			+moreInfo('mtbgtriFirst')
			+midNav('lessheight')
		
		footer
			+footer([['Nosotros', 'nosotros',''], ['Servicios', 'servicios',''], ['Galería', 'galeria', ''], ['Contacto', 'contacto', '']])
		

		+scripts(['_/jquery.js', '_/jquery.fractionslider.min.js', '_script.js'])
